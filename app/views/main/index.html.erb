<% unless current_user %>
  <% content_for :stylesheets do %>
    <!-- Stylesheets -->
    <%= stylesheet_link_tag "splash" %>
    <link href='http://fonts.googleapis.com/css?family=Handlee' rel='stylesheet' type='text/css' />
  <% end %>
  <section id="splash">
    <section id="headline">
      <h1>
        Teach The Bird
      </h1>
      <div>
      </div>
      <h2>
        Auto-magically create a feed of just the tweets you are looking for with our machine learning Twitter client
      </h2>
      </section>
      <ul class="thumbnails">
        <li class="span3">
        <div class="thumbnail">
          <img src="/assets/screen1.png" alt="">
        </div>
        </li>
         <li class="span3">
        <div class="thumbnail">
          <img src="/assets/screen2.png" alt="">
        </div>
        </li>
      </ul>
    <section id="extra" class="container">
      <a href="/auth/twitter" class="btn btn-primary btn-large">
        <img src="<%= image_path "dblue.png" %>" /> Get Started
      </a>
    </section>
  </section>
 <% else %>
  <% content_for :javascript do %>
    <div pub-key="<%= ENV['PN_PUB'] %>" sub-key="<%= ENV['PN_SUB'] %>" ssl="off" origin="pubsub.pubnub.com" id="pubnub"></div>
    <script src="http://cdn.pubnub.com/pubnub-3.1.min.js"></script>
    <%= javascript_include_tag "app" %>
  <% end %>
  <% content_for :stylesheets do %>
    <!-- Stylesheets -->
    <%= stylesheet_link_tag "app" %>
    <link href='http://fonts.googleapis.com/css?family=Handlee' rel='stylesheet' type='text/css' />
  <% end %>
  <!-- The Application -->
  <section id="app">
    <header id="toolbar"><div class="toolbar-inner">
      <h2>Teach the Bird</h2>
      <span class="user-name"></span>
    </header>
    <div id="container">
        <section id="streams">
            <div class="loading">
              Loading, carrier pidgeons have been dispatched...
              <div class="progress progress-info
                   progress-striped active">
                <div class="bar"
                     style="width: 100%;"></div>
              </div>
            </div>
        </section>
    </div>
  </section>
<% end %>
