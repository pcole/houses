//= require bootstrap
@import compass/css3/images

$darkblue: #1a243d
$lightblue: #bdcddf
$egg: #f3e4c7

html
  height: 100%
body
  background: $egg url("<%= asset_path "" %>/splash_bg.gif") repeat-x
  background-attachment: fixed
  height: 100%
  
#headline
  color: $egg
  text-align: center
  margin-bottom: 1.5%
  h1
    font-family: 'Handlee', cursive
    color: lighten($lightblue,15)
    font-size: 6em
    line-height: 1em
    font-weight: 800
    text-rendering: optimizelegibility
  h2
    font-family: 'Handlee', cursive
    color: lighten($lightblue,15)
    width: 70%
    font-size: 2em
    margin: 0 auto
 

.thumbnails
  width: 500px
  margin: 0 auto

#extra
  display: block
  width: 240px
  margin: 0 auto
  .btn 
    margin-top: 20px
    margin-bottom: 100px
    color: darken(#7dc0df,20)
    font-size: 2em
    font-family: 'Handlee', cursive
    text-shadow: none 
    border-color: lighten(#7dc0df,50)
    +background(linear-gradient(color-stops(lighten(#7dc0df,40) 0%,lighten(#7dc0df,20) 100%)))
    padding-right: 1em
    img
      float: left
      margin-right: .5em

#splash
  z-index: 5
  position: relative
