//= require bootstrap
@import "compass/css3/gradient"

$darkblue: #1a243d
$lightblue: #bdcddf
$egg: #f3e4c7

html
  height: 100%
body
  background: $egg url("<%= asset_path "" %>/splash_bg.gif") repeat-x
  background-attachment: fixed
  overflow: hidden
  height: 100%
  
#headline
  color: $egg
  text-align: center
  margin-top: 5%
  margin-bottom: 2%
  h1
    font-family: 'Handlee', cursive
    color: lighten($lightblue,15)
    font-size: 6em
    line-height: 1em
    font-weight: 800
    text-rendering: optimizelegibility
  h2
    font-family: 'Handlee', cursive
    color: lighten($lightblue,15)
    width: 70%
    font-size: 2em
    margin: 0 auto
    margin-top: 1em

.thumbnails
  width: 500px
  margin: 0 auto

#extra
  display: block
  width: 240px
  margin: 0 auto
  .btn 
    margin-top: 5%
    color: $darkblue
    font-size: 2em
    font-family: 'Handlee', cursive
    text-shadow: none
    background-color: $lightblue
    border-color: lighten($darkblue,20)
    +linear-gradient(color-stops(lighten($lightblue,20) 0%,$lightblue 100%),top)
    padding-right: 1em
    img
      float: left
      margin-right: .5em

#splash
  z-index: 5
  position: relative
